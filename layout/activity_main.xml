<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/emerald"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TableLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TableRow>

            <Button
                android:id="@+id/square1"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                android:textSize="70sp" />
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/square2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                android:textSize="70sp" />
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/square3"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                android:textSize="70sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/square4"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                android:textSize="70sp" />
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/square5"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                android:textSize="70sp" />
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/square6"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                android:textSize="70sp" />
        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/square7"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                android:textSize="70sp" />
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/square8"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                android:textSize="70sp" />
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/square9"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                android:textSize="70sp" />
        </TableRow>

    </TableLayout>

    <TextView android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:textSize="20dp"/>

    <TextView android:id="@+id/InforLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Info_text"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/reset"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/information"
        android:text="@string/New_Game"
        android:textSize="15sp" />


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView android:id="@+id/Label_A"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/HumanWins"
            android:gravity="fill_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"/>

        <TextView android:id="@+id/Label_B"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Label_A"
            android:text="@string/ComputerWins"
            android:gravity="fill_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"/>


        <TextView android:id="@+id/Label_C"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Label_B"
            android:text="@string/numberOfTies"
            android:gravity="fill_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"/>

        <TextView android:id="@+id/Label_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Label_A"
            android:text="@string/zero"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="20dp"/>

        <TextView android:id="@+id/Label_E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Label_B"
            android:layout_below="@id/Label_D"
            android:text="@string/zero"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>

        <TextView android:id="@+id/Label_F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Label_B"
            android:layout_below="@id/Label_E"
            android:text="@string/zero"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>

    </RelativeLayout>

</LinearLayout>
